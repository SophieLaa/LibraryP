@model List<Library.Web.Position>

<h2>Positions</h2>

<table class="table">
    <thead>
        <tr>
            <th>Position Title</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var position in Model)
        {
            <tr>
                <td>@position.PositionTitle</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@position.ID">Edit</a> |
                    <form asp-action="Delete" asp-route-id="@position.ID" method="post" onsubmit="return confirm('Are you sure you want to delete this position?');">
                        <button type="submit" class="btn-link">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
